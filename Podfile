# Uncomment the next line to define a global platform for your project

platform :ios, '15.0'

target 'GitDemo' do
  use_frameworks!
  
  # Networking
  pod 'Alamofire'

  # Image loading and caching
  pod 'Kingfisher', '~> 7.0'

  # Auto layout with code (optional)
  pod 'SnapKit', '~> 5.0'

  # Data refreshing
  pod 'MJRefresh'

end
